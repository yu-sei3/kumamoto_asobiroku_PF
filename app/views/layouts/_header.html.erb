<header>
  <div class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class="navbar-brand mr-5 ml-2" href="/"><span class="logo">熊本あそび録</span></a>
      <div class="row d-flex align-item-center">
        <div>
          <ul class="navbar-nav ml-auto flex-row">
            <!--管理者表示-->
            <% if admin_signed_in? %>
              <li>
                <%= link_to '会員一覧', admin_end_users_path, class: "text-dark mr-3" %>
              </li>
              <li>
                <%= link_to 'ジャンル一覧', admin_genres_path, class: "text-dark mr-3" %>
              </li>
              <li>
                <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: "text-dark" %>
              </li>
            <% else %>
            <!--会員表示-->
                <% if end_user_signed_in? %>
                  <li>
                    <%= link_to end_user_path(current_end_user), class: "text-dark" do %>
                      <i class="menu-icon fas fa-user"></i><span class="menu-list">マイページ</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to new_post_image_path, class: "text-dark ml-3" do %>
                    <i class="menu-icon fas fa-pen-square"></i><span class="menu-list">新規投稿</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to post_images_path, class: "text-dark ml-3" do %>
                    <i class="menu-icon far fa-images"></i><span class="menu-list">投稿一覧</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to new_contact_path(end_user_id: current_end_user.id), class: "text-dark ml-3" do %>
                    <i class="menu-icon far fa-envelope"></i><span class="menu-list">お問い合わせ</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to destroy_end_user_session_path, method: :delete, "data-confirm" => "ログアウトしますか？", class: "text-dark mx-3" do %>
                    <i class="menu-icon fas fa-sign-out-alt"></i><span class="menu-list">ログアウト</span>
                    <% end %>
                  </li>
                <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>
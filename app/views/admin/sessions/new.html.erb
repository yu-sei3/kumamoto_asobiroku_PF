<div class="container">
  <div class="row">
    <h3 class="col-12 p-3">
      <strong>管理者ログイン</strong>
    </div>
  </div>
  <%= form_with model: @admin, url: new_admin_session_path, local: true do |f| %>
    <div class="form-group row">
      <%= f.label :メールアドレス, class: "col-md-2 offset-1 text-right" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-md-6" %>
    </div>

    <div class="form-group row">
      <%= f.label :パスワード, class: "col-md-2 offset-1 text-right" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-md-6" %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-primary w-25 col-md-2 offset-5" %>
    </div>
  <% end %>

  <%= render "admin/shared/links" %>

</div>
<div class="container">
  <h3 class="text-center mr-5">ジャンル名編集</h3>
  <div class="row">

    <div class="col-md-3">
      <%= render "layouts/sidebar", genres: @genres %>
    </div>

    <div class="col-md-8 offset-1">
      <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name %>
        <%= f.submit '変更を保存', class: "btn btn-success" %>
      <% end %>
    </div>

  </div>
</div>
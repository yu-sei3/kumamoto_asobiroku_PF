<div class="container">
  <div class="row">
    <div class="col-md-4">
      <table class="bordered m-3">
        <thead>
          <tr>
            <th class="text-center">ジャンル一覧</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>
                <%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-success" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5 m-2 p-2">
      <h4>ジャンル新規作成</h4>
      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <%= f.label :ジャンル名, class: "m-3" %>
        <%= f.text_field :name %>
        <%= f.submit '新規登録', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>

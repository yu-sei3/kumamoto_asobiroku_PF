<div class="container pt-5">
  <div class="row">
    <div class="col">
      <h3 class="text-center">プロフィール編集</h3>
    </div>
  </div>
    <%= form_with model: @end_user, local: true do |f| %>
      <div class="form-group row pt-2">
        <div class="col-md-12 text-center">
          <p><%= f.label :image, 'プロフィール画像' %></p>
          <%= f.file_field :profile_image %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-12 text-center">
          <%= f.label :name, 'ユーザー名' %>
          <%= f.text_field :name, placeholder: "ユーザー名", class: "form-control" %>
        </div>
      </div>
        <div class="row text-danger">
          <div class="col text-center">
            <% if @end_user.errors.include?(:name) %>
              <%= @end_user.errors.full_messages_for(:name).first %>
            <% end %>
          </div>
        </div>
      <div class="form-group row">
        <div class="col text-center">
          <%= f.label :introduction, 'プロフィール' %>
          <%= f.text_area :introduction, placeholder: "プロフィール", class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col text-center">
          <%= f.submit "保存", class: "btn-square-so-pop w-25" %>
        </div>
      </div>
    <% end %>
    <div class="row mt-5">
      <h6 class="col text-center">
        <%= link_to '～ 退会する ～', confirm_unsubscribe_path(@end_user), class: "text-danger" %>
      </h4>
    </div>
</div>
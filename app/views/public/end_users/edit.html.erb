<div class="container pt-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3 class="text-center">プロフィール編集</h3>
      <%= form_with model: @end_user, local: true do |f| %>
        <%= render 'layouts/errors', model: @end_user %>

        <div class="form-group row pt-2">
          <%= f.label :image, 'プロフィール画像' %>
          <%= f.file_field :profile_image, class: "form-controle end_user_image", accept: 'image/*' %>
        </div>
        <div class="form-group row">
          <%= f.label :name, 'ユーザー名' %>
          <%= f.text_field :name, placeholder: "ユーザー名", class: "form-control" %>
        </div>
        <div class="form-group row">
          <%= f.label :introduction, 'プロフィール' %>
          <%= f.text_area :introduction, placeholder: "プロフィール", class: "form-control" %>
        </div>
        <div class="form-group row">
          <div class="col text-center">
            <%= f.submit "保存", class: "btn-square-so-pop w-25" %>

          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row text-center">
    <%= link_to '退会する', confirm_unsubscribe_path(@end_user), class: "btn btn-danger" %>
  </div>
</div>
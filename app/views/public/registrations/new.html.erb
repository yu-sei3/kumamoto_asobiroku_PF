<div class="container p-3">
  <div class="row">
    <div class="text-center col m-3">
      <h3>～ 新規登録 ～</h3>
    </div>
  </div>
  <%= form_with model: @end_user, url: end_user_registration_path, local: true do |f| %>

    <div class="form-group row m-2">
      <%= f.label :name, "ユーザー名", class: "col-md-4" %>
      <%= f.text_field :name, class: "form-control col-md-5" %>
      <div class="col-md-3 text-danger">
        <% if @end_user.errors.include?(:name) %>
          <%= @end_user.errors.full_messages_for(:name).first %>
        <% end %>
      </div>
    </div>

    <div class="form-group row m-2">
      <%= f.label :email, "メールアドレス", class: "col-md-4" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-md-5" %>
      <div class="col-md-3 text-danger">
        <% if @end_user.errors.include?(:email) %>
          <%= @end_user.errors.full_messages_for(:email).first %>
        <% end %>
      </div>
    </div>

    <div class="form-group row m-2">
      <%= f.label :password, "パスワード", class: "col-md-4" %>
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-md-5" %>
      <div class="col-md-3 text-danger">
        <% if @end_user.errors.include?(:password) %>
          <%= @end_user.errors.full_messages_for(:password).first %>
        <% end %>
      </div>
    </div>

    <div class="form-group row m-2">
      <%= f.label :password_confirmation, "確認用", class: "col-md-4" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-md-5" %>
      <div class="col-md-3 text-danger">
        <% if @end_user.errors.include?(:password_confirmation) %>
          <%= @end_user.errors.full_messages_for(:password_confirmation).first %>
        <% end %>
      </div>
    </div>

    <div class="actions row m-2">
      <div class="col text-center">
        <%= f.submit "新規登録", class: "btn-square-so-pop" %>
      </div>
    </div>
  <% end %>
  <div class="row mt-3 mb-2">
    <p class="col-md-12">新規登録しとる人は</p>
    <p class="col-md-5 offset-2 ml-5"><%= link_to "こちら", new_end_user_session_path, class: "text-warning" %> からログインしてはいよ！</p>
  </div>
</div>
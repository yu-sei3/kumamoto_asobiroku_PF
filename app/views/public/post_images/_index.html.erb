<div class="card-list-container">
  <% post_images.each do |post_image| %>
  <div class="card mx-auto mt-4 shadow-lg">
      <%= image_tag post_image.get_image, class: "card-img-top"; %>
    <div class="card-body">
      <div class="row">
        <div class="col-3">
          <%= image_tag post_image.end_user.get_profile_image, size: '100x100', class: "mt-3 rounded-circle"; %>
        </div>
        <div class="col-9">
          <p class="card-title">
            <%= post_image.created_at.strftime("%Y/%m/%d") %>
            <%= link_to(post_image_path(post_image.id), class: "text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= post_image.title %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= post_image.body %></p>
          <span><i class="fas fa-user"></i> By <%= post_image.end_user.name %> ｜ </span>
          <span><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id), class: "text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h3><%= @post_image.title %></h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <%= image_tag @post_image.get_image(100,100) %>
      <p>ユーザーネーム：<%= link_to @post_image.end_user.name, end_user_path(@post_image.end_user) %></p>
      <p>ジャンル：<%= @post_image.genre.name %></p>
      <p>所在地：<%= @post_image.location %></p>
      <p>紹介文：<%= @post_image.body %></p>
      <%= link_to '編集する', edit_post_image_path(@post_image), class: "btn btn-primary" %>
      <div>
        <%= render "layouts/favorites", post_image: @post_image %>
        <p>コメント件数：<%= @post_image.post_comments.count %></p>
        <% @post_image.post_comments.each do |post_comment| %>
          <p><%= image_tag post_comment.end_user.get_profile_image(100,100) %></p>
          <%= post_comment.end_user.name %>
          <%= post_comment.created_at.strftime("%Y/%m/%d") %><%= post_comment.comment %>
          <% if post_comment.end_user == current_end_user %>
            <%= link_to '削除', post_image_post_comment_path(post_comment.post_image, post_comment), method: :delete, class: "btn btn-danger" %>
          <% end %>
        <% end %>
      </div>
      <div>
        <%= form_with model: [@post_image, @post_comment], local: true do |f| %>
          <%= f.text_area :comment, placeholder: 'コメントをここに', class: "form-control" %>
          <%= f.submit '送信する' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<h1>新規投稿</h1>
  <%= form_with model: @post_image, local: true do |f| %>
    <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>ジャンル</h4>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, :include_blank => true, class: "form-control" %>
    <h4>所在地</h4>
      <%= f.text_field :location %>
    <h4>紹介文</h4>
      <%= f.text_area :body, class: "form-control-lg" %>
      <%= f.submit '投稿' %>
  <% end %>